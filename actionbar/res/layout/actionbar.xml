<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout 
        style="?attr/actionBarStyle"
        >
        <RelativeLayout
            android:id="@+id/actionbar_home"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/actionbar_height"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:visibility="visible"
            >
            <ImageButton
                android:id="@+id/actionbar_home_logo"
                android:layout_width="wrap_content"
                style="?attr/actionBarHomeLogoStyle"
                android:visibility="gone"
                />
            <FrameLayout
                android:id="@+id/actionbar_home_view"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/actionbar_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:background="?attr/actionBarItemDivider"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/actionbar_home_is_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/actionbar_back_indicator"
                android:layout_toLeftOf="@+id/actionbar_home_btn"
                android:layout_alignParentTop="true"
                android:padding="0dip"
                android:visibility="gone"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/actionbar_actions"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/actionbar_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:background="?attr/actionBarItemDivider"
            />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/actionbar_home"
            android:layout_toLeftOf="@id/actionbar_actions"
            android:layout_alignWithParentIfMissing="true"
            android:layout_centerVertical="true"
            >
            <ProgressBar
                android:id="@+id/actionbar_progress"
                style="?attr/actionBarProgressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="7dip"
                android:indeterminateOnly="true"
                android:visibility="gone"
                />
            <com.markupartist.android.widget.ScrollingTextView
                android:id="@+id/actionbar_title"
                style="?attr/actionBarTitleTextStyle"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/actionbar_progress"
                android:singleLine="true"
                />
            <com.markupartist.android.widget.ScrollingTextView
                android:id="@+id/actionbar_subtitle"
                style="?attr/actionBarSubtitleTextStyle"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/actionbar_progress"
                android:layout_below="@id/actionbar_title"
                android:singleLine="true"
                android:visibility="gone"
                />
            <FrameLayout
                android:id="@+id/actionbar_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/actionbar_progress"
                android:focusable="true"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/actionbar_list_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignWithParentIfMissing="true"
                android:layout_toLeftOf="@id/actionbar_progress"
                android:background="@drawable/actionbar_list_indicator"
                android:padding="0dip"
                android:visibility="gone"
                />
            <FrameLayout
                android:id="@+id/actionbar_custom"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/actionbar_progress"
                android:visibility="gone"
                />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/actionbar_tabs"
        style="?attr/actionBarTabBarStyle"
        android:layout_alignParentLeft="true"
        android:focusable="true"
        android:visibility="visible"
        android:orientation="horizontal"
        />
</LinearLayout>
