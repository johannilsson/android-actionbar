<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screen"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/actionbar_height"
    android:orientation="horizontal"
    >
    <RelativeLayout
        android:id="@+id/actionbar_home"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/actionbar_height"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:visibility="visible"
        >
        <ImageButton
            android:id="@+id/actionbar_home_logo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/actionbar_height"
            android:background="@drawable/actionbar_btn"
            style="@style/ActionBarHomeLogo"
            android:visibility="gone"
            />
        <FrameLayout
            android:id="@+id/actionbar_home_view"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/actionbar_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:background="@color/actionbar_separator"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/actionbar_home_is_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/actionbar_back_indicator"
            android:layout_toLeftOf="@+id/actionbar_home_btn"
            android:layout_alignParentTop="true"
            android:padding="0dip"
            android:visibility="gone"
            />
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/actionbar_actions"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/actionbar_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:background="@color/actionbar_separator"
        />
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/actionbar_home"
        android:layout_toLeftOf="@id/actionbar_actions"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        >
        <ProgressBar
            android:id="@+id/actionbar_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="7dip"
            android:indeterminateOnly="true"
            android:visibility="gone"
            style="@style/ActionBarProgressBar"
            />
        <com.markupartist.android.widget.ScrollingTextView
            android:id="@+id/actionbar_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/actionbar_progress"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:textSize="16dip"
            android:textStyle="bold"
            android:textColor="@color/actionbar_title"
            android:lines="1"
            android:scrollHorizontally="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            />
        <com.markupartist.android.widget.ScrollingTextView
            android:id="@+id/actionbar_subtitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/actionbar_progress"
            android:layout_below="@id/actionbar_title"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:textSize="12dip"
            android:textColor="@color/actionbar_subtitle"
            android:lines="1"
            android:scrollHorizontally="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:visibility="gone"
            />
        <FrameLayout
            android:id="@+id/actionbar_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/actionbar_progress"
            android:background="@drawable/actionbar_btn"
            android:focusable="true"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/actionbar_list_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toLeftOf="@id/actionbar_progress"
            android:background="@drawable/actionbar_list_indicator"
            android:padding="0dip"
            android:visibility="gone"
            />
        <LinearLayout
            android:id="@+id/actionbar_tabs"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/actionbar_progress"
            android:focusable="true"
            android:visibility="visible"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            />
        <!-- TODO: Make configurable. -->
        <View
            android:id="@+id/actionbar_tabs_bottom_line"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="2dip"
            android:background="#FFFFFF"
            android:layout_alignParentBottom="true"
            />
        <FrameLayout
            android:id="@+id/actionbar_custom"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/actionbar_progress"
            android:visibility="gone"
            />
    </RelativeLayout>
</RelativeLayout>